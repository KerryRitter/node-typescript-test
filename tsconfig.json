{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "mapRoot": "./",
        "sourceMap": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "inlineSources": true,
        "removeComments": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "reflect-metadata"
        ]
    },
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    }
}
